package group9.unit_test;


import group9.CollageMakerApplication;
import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

import javax.swing.*;
import java.io.File;
import java.io.IOException;

public class CollageMakerAppTesting {
CollageMakerApplication app;
    @Before
    public void setUpTests() throws IOException {
        app = new CollageMakerApplication();
        app.setVisible(false);


    }

    @Test
    public void testSetDisplay(){
        JPanel jpanel1 = new JPanel();
        app.setDisplay(jpanel1);
        Assert.assertEquals(app.getContentPane(), jpanel1.getParent());
        Assert.assertNotEquals(app.getContentPane(), null);

        JPanel jPanel2 = new JPanel();
        app.setDisplay(jPanel2);
        Assert.assertEquals(app.getContentPane(),jPanel2.getParent());
        Assert.assertNotEquals(app.getContentPane(), jpanel1.getParent());
    }

    @Test
    public void testAddFiles(){
        File[] files = new File[]{new File("trunk\\resources\\icons\\load_image_button.png"), new File("trunk\\resources\\icons\\delete_button.png")};
        app.addFiles(files);
        Assert.assertEquals(1, app.getPositionFromName("delete_button.png"));
        Assert.assertEquals(0, app.getPositionFromName("load_image_button.png"));
    }


    @Test
    public void testGetFileFromName(){
        File file = new File("trunk\\resources\\icons\\load_image_button.png");
        app.addFiles(new File[]{file});
        File file2 = app.getFileFromName("load_image_button.png");
        Assert.assertEquals(file,file2);
        File file3 = new File("trunk\\resources\\icons\\delete_button.png");
        Assert.assertNotEquals(file2,file3);
    }

}
