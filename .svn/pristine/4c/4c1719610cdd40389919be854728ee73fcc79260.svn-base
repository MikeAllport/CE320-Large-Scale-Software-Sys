package group9.button_handling;

import group9.CollageMakerApplication;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class HelpButtonHandler extends JFrame implements ActionListener
{
    private CollageMakerApplication theApp;

    public HelpButtonHandler(CollageMakerApplication theApp)
    {
        this.theApp = theApp;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        HelpButtonHandler frame = new HelpButtonHandler(theApp);
        frame.setVisible(true);
        frame.setSize(400,400);
        setResizable(false);
        Copyrights imagePanel1 = new Copyrights();
        frame.add(imagePanel1);
        ImageIcon img = new ImageIcon("trunk\\icons\\help.png");
        frame.setIconImage(img.getImage());
    }
}

class Copyrights extends JPanel {

    Image image;

    public Copyrights(){
        setLayout(new BorderLayout());
        String copyrights = String.format("All copyrights reserved. Â© - Group 09 ");
        Label textarea = new Label("\u00a9");
        textarea.setFont(new Font("Serif", Font.BOLD, 12));
        textarea.setText(copyrights);
        textarea.setBackground(Color.white);
        this.add(textarea, BorderLayout.PAGE_END);
        setBackground(Color.GRAY);
    }
    public void setBackground(Image image) {
        this.image = image;
    }

    @Override
    public void paintComponent(Graphics G) {
        super.paintComponent(G);
        G.drawImage(image, 0, 0, this.getWidth(), this.getHeight()-100, null);
    }
}
