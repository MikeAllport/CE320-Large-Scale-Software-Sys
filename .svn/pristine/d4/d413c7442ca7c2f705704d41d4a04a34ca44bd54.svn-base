package group9.CollageWindow;

import java.awt.*;

public enum Colors
{
    BLACK("BLACK"), BEIGE("BEIGE"), GREY("GREY"), WHITE("WHITE");

    private final String label;

    private Colors(String label) {
        this.label = label;
    }

    public String getLabel() {
        return label.substring(0,1) + label.substring(1).toLowerCase();
    }

    public static Color getColor(Colors color)
    {
        switch(color)
        {
            case BLACK:
                return Color.BLACK;
            case BEIGE:
                return new Color(255,228,196);
            case GREY:
                return Color.GRAY;
            case WHITE:
                return Color.WHITE;
            default:
                return Color.BLUE;
        }
    }

    public static Colors getEnumFromString(String toCheck)
    {
        try
        {
            return Colors.valueOf(toCheck.toUpperCase());
        }
        catch (Exception e)
        {
            return null;
        }
    }
}

