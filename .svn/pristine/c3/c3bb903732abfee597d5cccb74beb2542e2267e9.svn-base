import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class CollageMaker extends JFrame {

    public CollageMaker(){
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(1400, 800);
        setVisible(true);

        MainMenu mainMenu = new MainMenu(this);
        setDisplay(mainMenu);
    }

    public void setDisplay(JPanel panel){
        getContentPane().removeAll();
        add(panel);
        validate();
        repaint();
    }

    public static void main(String[] args){
        new CollageMaker();
    }
}

class MainMenu extends JPanel{
    CollageMaker theApp;

    MainMenu(CollageMaker theApp){
        this.theApp=theApp;
        JButton selectImages = new JButton("Select Images");
        JButton generate = new JButton("Generate");
        generate.addActionListener(new GenerateHandler());
        add(selectImages);
        add(generate);
    }

    class GenerateHandler implements ActionListener{
        @Override
        public void actionPerformed(ActionEvent e) {
            CollageSelector collageSelector = new CollageSelector();
            theApp.setDisplay(collageSelector);
        }
    }
}

class CollageSelector extends JPanel{

    CollageSelector(){
        add(new JLabel("Display collage(s) here"));
        JButton save = new JButton("Save");
        add(save);
    }
}
