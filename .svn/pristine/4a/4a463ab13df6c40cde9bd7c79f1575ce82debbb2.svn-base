package group9.homepage_window;

import group9.CollageMakerApplication;
import group9.button_handling.GenerateCollageButtonHandler;

import javax.swing.*;
import javax.swing.border.EmptyBorder;
import javax.swing.border.LineBorder;
import javax.swing.border.TitledBorder;
import java.awt.*;

//The panel where the preview of image selected in JList is shown
public class PreviewImages extends JPanel {

    public PreviewImages(JLabel image, CollageMakerApplication theApp) {
        super();
        setBackground(Color.WHITE);

        //Add a border with a title to show bounding boxes
        TitledBorder t = new TitledBorder(new LineBorder(Color.BLACK, 3), "PREVIEW IMAGE");
        t.setTitleJustification(TitledBorder.CENTER);
        setBorder(t);
        setPreferredSize(new Dimension(450, 400));
        setLayout(new BorderLayout());

        image.setBorder(new EmptyBorder(15, 15, 15, 15));
        image.setHorizontalAlignment(JLabel.CENTER);
        image.setVerticalAlignment(JLabel.CENTER);

        image.setVerticalTextPosition(JLabel.BOTTOM);
        image.setHorizontalTextPosition(JLabel.CENTER);
        add(image);

        JPanel generateCollage = new JPanel();
        generateCollage.setBackground(Color.WHITE);

        //adding 'generate' button including resizing icon image to fit button
        CustomJButton generateBtn = new CustomJButton("generate");
        //needs to go in the preview image panel
        generateCollage.add(generateBtn);
        generateBtn.addActionListener(new GenerateCollageButtonHandler(theApp));

        add(generateCollage, BorderLayout.PAGE_END);
    }
}
