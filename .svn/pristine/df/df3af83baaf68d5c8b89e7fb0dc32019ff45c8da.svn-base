package group9.CollageWindow;

import java.awt.*;

public enum Colors
{
    BLACK("black"), BEIGE("beige"), GREY("grey"), WHITE("white");

    private final String label;

    private Colors(String label) {
        this.label = label;
    }

    public String getLabel() {
        return label;
    }

    public static Color getColor(Colors color)
    {
        switch(color)
        {
            case BLACK:
                return Color.BLACK;
            case BEIGE:
                return new Color(255,228,196);
            case GREY:
                return Color.GRAY;
            case WHITE:
                return Color.WHITE;
            default:
                return Color.BLUE;
        }
    }
}

