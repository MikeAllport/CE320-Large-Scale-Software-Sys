package group9.button_handling;

import group9.CollageMakerApplication;
import group9.collage_window.CollagePreview_Page;
import group9.homepage_window.Test_Homepage;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.image.BufferedImage;
import java.nio.Buffer;
import java.util.ArrayList;

public class DiscardCollageButtonHandler implements ActionListener
{
    private BufferedImage collageImage;
    private CollageMakerApplication theApp;

    public DiscardCollageButtonHandler(CollageMakerApplication theApp, BufferedImage collageImage)
    {
        this.theApp = theApp;
        this.collageImage = collageImage;
    }
    @Override
    public void actionPerformed(ActionEvent e){
        Test_Homepage homepage = null;
        homepage = new Test_Homepage(theApp);
        theApp.setDisplay(homepage);

        System.out.println("COLLAGE DISCARDED");
    }
}
