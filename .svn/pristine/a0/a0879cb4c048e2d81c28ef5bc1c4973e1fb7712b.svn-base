package group9.CollageWindow;

//import com.seaglasslookandfeel.*; //for tabbed pane

import group9.utils.Utils;

import javax.imageio.ImageIO;
import javax.swing.*;
import java.awt.*;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

public class Editor extends Canvas {
    public Editor() {
        setBackground(Color.GRAY);
        setSize(300, 200);
    }

    public void paint(Graphics g) {
        g.setColor(Color.red);
        g.fillOval(75, 75, 150, 75);
    }

    public static void main(String[] args) {

        JFrame f = new JFrame();
        f.getContentPane().setLayout(null);
        f.setLocationRelativeTo(null);
        f.setBackground(Color.WHITE);
        f.setSize(400, 400);

        Editor e = new Editor();
        e.setLocation(52, 23);
        f.getContentPane().add(e);


        CustomJTabbedPane tabbedPane = new CustomJTabbedPane();
        tabbedPane.setBounds(52, 259, 300, 102);

        JPanel tab1 = new JPanel();
        tab1.setSize(new Dimension(100, 50));
        tab1.setLayout(new BoxLayout(tab1, BoxLayout.X_AXIS));


        JScrollPane scrollPane = new JScrollPane(tab1);

        JLabel lblRetro = new JLabel();
        lblRetro.setSize(20, 20);
        lblRetro.setIcon(getImageIcon(lblRetro));
        tab1.add(lblRetro);

        JLabel lblComic = new JLabel("Comic");
        tab1.add(lblComic);


        scrollPane.setHorizontalScrollBarPolicy(JScrollPane.HORIZONTAL_SCROLLBAR_AS_NEEDED);
        scrollPane.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_NEVER);

        tabbedPane.addTab("Filter", scrollPane);


        JPanel tab2 = new JPanel();
        tab2.setSize(new Dimension(100, 50));
        tabbedPane.addTab("Frames", tab2);

        JPanel tab3 = new JPanel();
        tab3.setSize(new Dimension(100, 50));
        tabbedPane.addTab("Effects", tab3);

        JPanel tab4 = new JPanel();
        tab4.setSize(new Dimension(100, 50));
        tabbedPane.addTab("Rotate", tab4);

        JPanel tab5 = new JPanel();
        tab5.setSize(new Dimension(100, 50));
        //tabbedPane.addTab("Stickers/Text", tab5);

        f.getContentPane().add(tabbedPane);

        f.setVisible(true);
    }

    public static ImageIcon getImageIcon(JLabel lbl) {
        BufferedImage image = null;
        try {
            image = ImageIO.read(new File(System.getProperty("user.dir") + "/resources/icons/retro_filter.png"));
        } catch (IOException ioException) {
            ioException.printStackTrace();
        }
        Image img = Utils.rescaleIcon(image, 50, 50);

        return new ImageIcon(img);
    }
}

class CustomJTabbedPane extends JTabbedPane {
    public CustomJTabbedPane() {
        super();
        setTabLayoutPolicy(JTabbedPane.SCROLL_TAB_LAYOUT);
        setTabPlacement(JTabbedPane.BOTTOM);
        //setLookAndFeel();
    }
}