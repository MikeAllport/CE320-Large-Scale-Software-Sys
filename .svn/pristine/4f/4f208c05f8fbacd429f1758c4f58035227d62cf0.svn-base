package group9.ButtonHandling;

import group9.CollageMakerApplication;
import group9.CollageWindow.CollagePreview_Page;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class NextCollageButtonHandler implements ActionListener {
    CollagePreview_Page previewPage;
    public NextCollageButtonHandler(CollagePreview_Page previewPage) {
        this.previewPage = previewPage;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        CollageMakerApplication.collageIndex++;
        CollageMakerApplication.collageIndex = CollageMakerApplication.collageIndex %
                CollageMakerApplication.collages.size();
        CollagePreview_Page.setCollageLabelImage();
        previewPage.collageNumLabel.setText(Integer.toString(CollageMakerApplication.collageIndex + 1));
        System.out.println("CODE WILL CYCLE TO NEXT COLLAGE");
    }
}
