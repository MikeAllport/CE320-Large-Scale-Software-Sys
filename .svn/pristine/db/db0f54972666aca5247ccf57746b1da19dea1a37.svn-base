package group9.button_handling;

import group9.CollageMakerApplication;
import group9.collage_window.CollagePreview_Page;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class PreviousCollageButtonHandler implements ActionListener {
    CollagePreview_Page previewPage;
    public PreviousCollageButtonHandler(CollagePreview_Page previewPage) {
        this.previewPage = previewPage;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        CollageMakerApplication.collageIndex--;
        CollageMakerApplication.collageIndex = Math.abs(CollageMakerApplication.collageIndex) %
                CollageMakerApplication.collages.size();
        CollagePreview_Page.setCollageLabelImage();
        previewPage.collageNumLabel.setText(Integer.toString(CollageMakerApplication.collageIndex + 1));
        System.out.println("CODE WILL CYCLE TO PREVIOUS COLLAGE");
    }
}
