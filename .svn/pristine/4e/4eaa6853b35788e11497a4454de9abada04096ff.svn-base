//simple test class unrelated to the main product to test converting images to black and white

package group9.testing_things;

//authors Hiraj & Sumayya

import javax.imageio.ImageIO;
import java.awt.*;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;


public class conversionToBlackAndWhite { //class

    public BufferedImage img;
    int height;
    int width;

    public conversionToBlackAndWhite() throws IOException { //methods are run in that order
        getImage();
        imageColourConversion();
        outputImage();
    }

    public static void main(String[] args) throws IOException { //main method creating new instance of public conversionToBlackAndWhite
        new conversionToBlackAndWhite();
    }

    private void getImage() throws IOException { //method to load the image in
        try {
            img = ImageIO.read(new File("trunk\\resources\\testImages\\cat.jpg"));
            width = img.getWidth();
            height = img.getHeight();
            System.out.println("Image to be converted loaded successfully");
        } catch (IOException e) {
            e.printStackTrace();
            System.out.println("Image to be converted was not loaded");
        }
    }

    private void imageColourConversion() throws IOException { //converts loaded image to black and white
        System.out.println("Image is being converted to black and white");
        for (int i = 0; i < height; i++) {
            for (int j = 0; j < width; j++) {
                Color color = new Color(img.getRGB(j, i));
                int red = (int) (color.getRed() * 0.25);
                int green = (int) (color.getGreen() * 0.47);
                int blue = (int) (color.getBlue() * 0.214);
                int sum = (red + green + blue);
                Color newColor = new Color(sum, sum, sum);
                img.setRGB(j, i, newColor.getRGB());
            }
        }
    }

    private void outputImage() throws IOException { //method to output the converted image
        try {
            ImageIO.write(img, "jpg", new File("trunk\\resources\\testImages\\cat_blackandwhite.jpg"));
            System.out.println("Converted image saved successfully");
        } catch (IOException e) {
            System.out.println("The converted image could not be saved" + e.getMessage());
        }
    }
}