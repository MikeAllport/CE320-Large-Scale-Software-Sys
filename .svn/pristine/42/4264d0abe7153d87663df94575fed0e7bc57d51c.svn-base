import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class CollageMakerApplication extends JFrame {

    public CollageMakerApplication(){
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(1400, 800);
        setVisible(true);

        MainMenu mainMenu = new MainMenu(this);
        setDisplay(mainMenu);
    }

    public void setDisplay(JPanel panel){
        getContentPane().removeAll();
        add(panel);
        validate();
        repaint();
    }

    public static void main(String[] args){
        new CollageMakerApplication();
    }
}

//Main Menu Screen
class MainMenu extends JPanel{
    CollageMakerApplication theApp;

    MainMenu(CollageMakerApplication theApp){
        this.theApp=theApp;
        JButton selectImagesButton = new JButton("Select Images");
        JButton generateButton = new JButton("Generate");
        generateButton.addActionListener(new GenerateHandler());
        add(selectImagesButton);
        add(generateButton);
    }

    class GenerateHandler implements ActionListener{
        @Override
        public void actionPerformed(ActionEvent e) {
            CollageSelector collageSelector = new CollageSelector();
            theApp.setDisplay(collageSelector);
        }
    }
}

//Collage Selector Screen
class CollageSelector extends JPanel{

    CollageSelector(){
        add(new JLabel("Display collage(s) here"));
        JButton save = new JButton("Save");
        add(save);
    }
}
