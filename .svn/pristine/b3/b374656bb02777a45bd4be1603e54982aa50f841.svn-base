package group9.button_handling;

import group9.CollageMakerApplication;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class DeleteImageButtonHandler implements ActionListener
{
    private final CollageMakerApplication theApp;
    private final JList<String> filesList;
    private final JLabel image;

    public DeleteImageButtonHandler(CollageMakerApplication theApp, JLabel image, JList<String> filesList)
    {
        this.theApp = theApp;
        this.filesList = filesList;
        this.image = image;
    }
    @Override
    public void actionPerformed(ActionEvent e) {
        String filename = filesList.getSelectedValue();
        if(filename!=null) {
            theApp.deleteFile(filename);
            image.setIcon(new ImageIcon());
        }
    }
}
