package group9.button_handling;

import group9.CollageMakerApplication;
import group9.homepage_window.CopyrightsPanel;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class HelpButtonHandler extends JFrame implements ActionListener
{
    private CollageMakerApplication theApp;

    public HelpButtonHandler(CollageMakerApplication theApp)
    {
        this.theApp = theApp;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        HelpButtonHandler frame = new HelpButtonHandler(theApp);
        frame.setVisible(true);
        frame.setSize(400,400);
        setResizable(false);
        CopyrightsPanel imagePanel1 = new CopyrightsPanel();
        frame.add(imagePanel1);
        ImageIcon titleIcon = new ImageIcon("trunk\\resources\\icons\\help_icon_button.png");
        frame.setIconImage(titleIcon.getImage());
        Label helpInstructions = new Label("Help text displayed here");
        helpInstructions.setFont(new Font("Serif", Font.BOLD, 16));
        imagePanel1.add(helpInstructions);

    }
}
