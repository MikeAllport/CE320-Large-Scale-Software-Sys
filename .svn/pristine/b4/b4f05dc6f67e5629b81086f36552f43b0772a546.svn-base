import javax.imageio.ImageIO;
import javax.swing.*;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class CollageFrame extends JFrame
{
    private CollagePanel panel;

    public CollageFrame() throws IOException
    {

        setSize(1000,1000);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setResizable(false);

        Scanner input = new Scanner(System.in);
        System.out.println("Input path to directory. Directory must end with '/'");
        String path = input.nextLine();
        panel = new CollagePanel(path);
        panel.setSize(1000,1000);

        add(panel);
        setVisible(true);
    }

    public static void main(String[] args) throws IOException
    {
        CollageFrame frame = new CollageFrame();
    }
}
