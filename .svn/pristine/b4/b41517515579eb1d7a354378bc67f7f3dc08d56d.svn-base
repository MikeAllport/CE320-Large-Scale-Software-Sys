import javax.imageio.ImageIO;
import java.awt.*;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

public class CollageGenerator {
    BufferedImage collage = new BufferedImage(256,512,BufferedImage.TYPE_INT_RGB);

    //combines images in resources into a single "collage" image saved in resources. Just a test
    public CollageGenerator() throws IOException {
        BufferedImage img1 = ImageIO.read(new File("trunk/resources/images/collage_test_images/puppy.jpg"));
        BufferedImage img2 = ImageIO.read(new File("trunk/resources/images/collage_test_images/dog.jpg"));
        Graphics2D collage_creation = collage.createGraphics();
        collage_creation.drawImage(img1,0,0,null);
        collage_creation.drawImage(img2,0,256,null);
        collage_creation.dispose();
        File generated_Collage = new File("trunk/resources/images/collage_test_images/generated_collage.jpg");
        ImageIO.write(collage, "jpg", generated_Collage); //did some refactoring, nothing major - Hiraj Keshavji
    }

    public static void main(String[] args) throws IOException {
        new CollageGenerator();
    }
}