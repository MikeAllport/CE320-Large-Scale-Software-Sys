package group9;

import javax.swing.*;
import java.awt.*;
import group9.button_handling.*;

// group9.Homepage
class Homepage extends JPanel
{
    CollageMakerApplication theApp;

    Homepage(CollageMakerApplication theApp) {
        this.theApp = theApp;
        setLayout(new BorderLayout());

        JPanel topButtonBar = new JPanel(new GridLayout(1, 2));
        JPanel topLeftBtns = new JPanel(new FlowLayout(FlowLayout.LEFT));
        JPanel topRightBtns = new JPanel(new FlowLayout(FlowLayout.RIGHT));
        JButton testBn = new JButton("PLACEHOLDER BUTTON");
        JPanel botButtonBar = new JPanel(new FlowLayout());

        topButtonBar.add(topLeftBtns); topButtonBar.add(topRightBtns);

        JButton load_image_btn = new JButton("LOAD IMAGE");
        JButton delete_image_btn = new JButton("DELETE IMAGE");
        JButton help_homepage_btn = new JButton("HELP");
        JButton generate_btn = new JButton("GENERATE");
        JButton customise_collage_btn = new JButton("CUSTOMISE (FUTURE ITERATIONS)");

        topLeftBtns.add(load_image_btn);
        topLeftBtns.add(delete_image_btn);
        topRightBtns.add(help_homepage_btn);
        botButtonBar.add(generate_btn);
        botButtonBar.add(customise_collage_btn);

        add(topButtonBar, BorderLayout.NORTH);
        add(testBn, BorderLayout.CENTER);
        add(botButtonBar, BorderLayout.SOUTH);

        load_image_btn.addActionListener(new LoadImageButtonHandler(theApp));
        delete_image_btn.addActionListener(new DeleteImageButtonHandler(theApp));
        help_homepage_btn.addActionListener(new HelpButtonHandler(theApp));
        customise_collage_btn.addActionListener(new CustomiseCollageButtonHandler(theApp));
        generate_btn.addActionListener(new GenerateCollageButtonHandler(theApp));
    }

}